<% if clients.any? %>
  <ul class="media-list">
    <% clients.each do |client| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(client, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= client.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', client_path(client) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate clients %>
<% end %>